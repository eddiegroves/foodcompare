@model FoodCompare.Web.Models.TaggedFoodViewModel

<h2>@Model.TagName</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Calories</th>
      <th>Carbs</th>
      <th>Protein</th>
      <th>Fat</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var food in Model.Foods) {
    <tr>
      <td>@food.Brand @food.Product</td>
      <td>@Html.DisplayFor(_ => food.Calories)</td>
      <td>@Html.DisplayFor(_ => food.Carbohydrate)</td>
      <td>@Html.DisplayFor(_ => food.Protein)</td>
      <td>@Html.DisplayFor(_ => food.Fat)</td>
      <td>@Html.DisplayFor(_ => food.Price)</td>
    </tr>
    }
    <tr>
      <td>@Model.Totals.Product</td>
      <td>@Html.DisplayFor(_ => Model.Totals.Calories)</td>
      <td>@Html.DisplayFor(_ => Model.Totals.Carbohydrate)</td>
      <td>@Html.DisplayFor(_ => Model.Totals.Protein)</td>
      <td>@Html.DisplayFor(_ => Model.Totals.Fat)</td>
      <td>@Html.DisplayFor(_ => Model.Totals.Price)</td>
    </tr>
  </tbody>
</table>
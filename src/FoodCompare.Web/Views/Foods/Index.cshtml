@model List<FoodCompare.Web.Models.Food>

<h2 class="pull-left">Foods</h2>
@Html.ActionLink("Add", "Add", "Foods", routeValues: null, htmlAttributes: new { @class = "btn pull-right" })

<table class="table table-striped">
<thead>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Calories</th>
    <th>Carbs</th>
    <th>Protein</th>
    <th>Fat</th>
    <th>Tags</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  @foreach (var food in Model) {
  <tr>
    <td>@food.Id</td>
    <td>@food.Brand @food.Product</td>
    <td>@food.Calories</td>
    <td>@food.Carbohydrate</td>
    <td>@food.Protein</td>
    <td>@food.Fat</td>
    <td>@food.Tags</td>
    <td>
      @Html.ActionLink("Edit", "Edit", "Foods", routeValues: new { id = food.Id }, htmlAttributes: new { @class = "btn" })
      @Html.ActionLink("Delete", "Delete", "Foods", routeValues: new { id = food.Id }, htmlAttributes: new { @class = "btn" })
    </td>
  </tr>}
</tbody>
</table>
